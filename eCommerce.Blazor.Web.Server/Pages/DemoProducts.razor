@page "/demoproducts"

<div class="container">
    <div class="row">
        <div class="col">
            <div class="title-container">
                <h3>Demo Products</h3>
            </div>

            <div class="demo-products-grid">
                @foreach ( var prod in Products )
                {
                    <div class="card product-card">
                      <div class="card-body">
                          <div class="card-title-container">
                              <h4 class="card-title">@prod.Name</h4>
                              <h5 class="product-price"><span>€</span>@prod.Price</h5>
                          </div>                       
                        <div class="input-group mb-3">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" id="isactivecheck" @bind-value=@prod.IsActive checked="@(prod.IsActive?"checked":null)" >
                              <label class="form-check-label" for="isactivecheck">
                                Show properties
                              </label>
                            </div>
                        </div>
                      </div>

                        <ul class="list-group list-group-flush" style="display: @(prod.IsActive?"flex":"none")">
                            @foreach ( var prop in prod.ProductProperties )
                            {
                                <li class="list-group-item">
                                    <span class="property-name">@prop.Key</span>:<span class="property-value">@prop.Value</span>
                                </li>
                            }
                        </ul>

                        @*<p class="card-text"></p>*@

                        <div class="card-footer card-buttons">
                            <_EditDeleteButtonComponent></_EditDeleteButtonComponent>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

