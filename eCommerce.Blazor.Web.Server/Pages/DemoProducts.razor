@page "/demoproducts"

<div class="container">
    <div class="row">
        <div class="col">
            <div class="title-container">
                <h3>Demo Products</h3>
            </div>
            <div class="favourites-counter">
                Favourites Total: <span>@_SelectedFavouritesCount</span>
            </div>

            <div class="demo-products-grid">
                @foreach ( var prod in Products )
                {
                    <_DemoProductComponent Product="@prod" OnFavouriteUpdated="FavouriteCountUpdate"></_DemoProductComponent>
                }
            </div>
        </div>
    </div>
</div>

